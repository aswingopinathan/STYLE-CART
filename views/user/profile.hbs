<div class="row m-0">
    <div class="col-md-6 m-auto">
        <div class="container mt-5 pl-5">
            <h2 class="text-center">Profile</h2>
            
            <div class="form-group">
                <label><strong>Username</strong></label>
                <input type="text" class="form-control"  id="firstName" name="Username" value="{{profiledata.[0].Username}}"
                    required>
            </div>
            <div class="form-group">
                {{emailError}}
                <label><strong>Email</strong></label>
                <input type="text" class="form-control"  id="email" name="Email" value="{{profiledata.[0].Email}}"
                    id="contact-email" required>
            </div>
            <div class="form-group">
                <label><strong>Mobilenumber</strong></label>
                <input type="text" class="form-control" id="phoneNumber"  name="Mobile" value="{{profiledata.[0].Mobile}}"
                    placeholder="Enter mobile number" required>
            </div>
            <div class="mt-3" style=" width: fit-content;">
                <a href="/change-password" class="btn btn-primary">change password</a>
                <a href="/edit-profile" class="btn btn-success" style="width: fit-content;">Edit Profile</a>
                <a href="/show-address" class="btn btn-success" style="width: fit-content;">Show Address</a>
            </div>

        </div>
    </div>
</div>
