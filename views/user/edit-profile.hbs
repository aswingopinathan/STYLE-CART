<div class="row m-0">
    <div class="col-md-6 m-auto">
        <div class="container mt-5 pl-5">
            <h2 class="text-center">Edit Profile</h2>
            <form action="/edit-profile" method="post">
            <div class="form-group">
                <label><strong>Username</strong></label>
                <input type="text" class="form-control"  id="firstName" name="Username" value="{{userlog.Username}}"
                    required>
            </div>
            <div class="form-group">
                
                <label><strong>Email</strong></label>
                <input type="text" class="form-control"  id="email" name="Email" value="{{userlog.Email}}"
                    id="contact-email" required>
            </div>
            <div class="form-group">
                <label><strong>Mobilenumber</strong></label>
                <input type="text" class="form-control" id="phoneNumber"  name="Mobile" value="{{userlog.Mobile}}"
                    placeholder="Enter mobile number" required>
            </div>
            <div class="mt-3" style=" width: fit-content;">
                <button type="submit" onclick="" value="Submit"
                        class="btn btn-primary">Submit</button>
            </div>
            </form>
        </div>
    </div>
</div>
