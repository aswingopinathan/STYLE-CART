<div class="row m-0">
    <div class="col-md-6 m-auto">
        <div class="container mt-5 pl-5">
            <h2 class="text-center">Sign Up</h2>
            <form id="submit-form" action="/signup" method="post">
                {{#if signerr}}
                <p class="error text-center" style="color: red;">{{signerr}}</p>
                {{/if}}

                <div class="form-group">
                    <label><strong>Username</strong></label>
                    <input type="text" class="form-control" name="Username" id="firstName" onkeyup="validateName()" placeholder="Enter your name" required>
                </div>
                 <span id="firstName-error" class="text-danger my-auto"></span>

                <div class="form-group">
                    {{emailError}}
                    <label><strong>Email</strong></label>
                    <input type="text" class="form-control" name="Email" id="email" onkeyup="validateEmail()" placeholder="Enter email" id="contact-email"
                        required>
                </div>
                <span id="email-error" class="text-danger my-auto"></span>

                <div class="form-group">
                    <label><strong>Mobilenumber</strong></label>
                    <input type="number" class="form-control" id="phoneNumber" onkeyup="validatePhoneNumber()" value="" name="Mobile"
                        placeholder="Enter mobile number" required>
                </div>
                <span id="phoneNumber-error" class="text-danger my-auto"></span>

                <div class="form-group">
                    <label><strong>Password</strong></label>
                    <input type="password" id="password" onkeyup="validatePassword()" value="" class="form-control" name="Password"
                        placeholder="Enter password" required>
                </div>
                <span id="password-error" class="text-danger my-auto"></span>

                <div class="form-group">
                    <label><strong>Confirm Password</strong></label>
                    <input type="password" id="confirmPassword" onkeyup="validateConfirmPassword()" value="" class="form-control" placeholder="Confirm Password"
                        required>
                </div>
                <span id="confirmPassword-error" class="text-danger my-auto"></span>

                <div class="form-group">
                    <label><strong>Referral Code</strong></label>
                    <input type="text" id=""  value="" name="referralcode" class="form-control" placeholder="">
                </div>

                {{!-- <div class="form-group">
                    <input type="text"  value="" name="wallet" class="form-control" hidden>
                </div> --}}


                <a href="/login" class="sign sign-info mt-5 " style="width: fit-content; text-decoration: none;">Already
                    have account ?</a>
                <div class="mx-auto mt-3" style=" width: fit-content;">
                    <button type="submit" onclick="return validateForm()" value="Submit"
                        class="btn btn-primary">Signup</button>
                </div>
            </form>
        </div>
    </div>
</div>
