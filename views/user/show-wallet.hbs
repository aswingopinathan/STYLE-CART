<script>
    function cancelProduct(orderId,total,paymentType) {
        console.log("cancel from orders");
        console.log("paymentType",paymentType);
        swal({
            title: "Are you sure?",
            text: "Product will be cancelled from orders",
            icon: "warning",
            buttons: true,
            dangerMode: true,
        })
            .then((willDelete) => {
                if (willDelete) {
                    $.ajax({
                        url: "/cancel-order",
                        data: {
                            orId: orderId,
                            amount: total,
                            payment:paymentType

                        },
                        method: "post",
                        success: (response) => {
                            //alert("Product cancelled from orders");
                            location.reload();

                        },
                    });
                }
            });

    }
</script> 