<div class="container" style="margin-top:100px ;">
  <h3 class="mt-3 fw-800 pb-3">Your Addresses</h3>
  <div class="row g-2">

    <div class=" container-fluid card w-25 col-md-3 m-2 border-1 d-flex justify-content-center text-center" style="height: 250px">
     <a class="text-decoration-none " href="/user-profile-update"><i class="display-1 fi fi-rr-add"></i></a> 
    
    </div>
    
    
  {{#each useradd.address}}
    <div class=" w-25 col-md-3 m-2 border-2" style="height: 250px">
      <div class="container text-wrap p-3">
       
        <div class="text-wrap" style="height: 150px"> 
        <p class="fw-bold">{{this.name}}</p>
        <p class="text-justify">
          {{this.address}}, <span> {{this.pincode}} ,{{this.country}},  {{this.state}}, </span>  {{this.city}}, {{this.mobile}}
        </p>
        {{#if this.default}}
       <i style="color: yellow; " class="fi fi-ss-star"></i>
       {{/if}}
        </div>
       
        <div class="mt-4 d-flex">
          <span class="text-decoration-none text-primary" onclick="makeItDefault('{{this.uId}}')"> Make it default</span>
          <div
            class="m-2"
            style=" height:10px; width:2px; background-color:rgb(78, 78, 78);"
          ></div>
          <span onclick="removeAddress('{{this.uId}}')" class="text-decoration-none text-primary" href=""> Remove</span>
        </div> 
       
       
      </div>
      
    </div>

    {{/each}}
    <a href="/add-address" class="btn btn-success" style="width: fit-content;">ADD ADDRESS</a>
   
</div>