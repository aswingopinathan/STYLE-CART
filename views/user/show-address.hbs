<div class="container">

  <a href="/add-address" class="btn btn-primary">Add address</a><br><br>

  <div class="container-fluid d-flex ">
    {{#each useradd}}
    <div class="card m-5" style="width: 18rem;">
      <div class="card-body ">
        <h5 class="card-title text-center">Address</h5>
        {{!-- <h6 class="card-subtitle mb-2 text-muted">Card subtitle</h6> --}}
        <p class="card-text">{{this.name}}</p>
        <p class="card-text">{{this.address}} </p>
        <p class="card-text">{{this.pincode}} </p>
        <p class="card-text">{{this.mobile}} </p>
        <p class="card-text">{{this.locality}} </p>
        <p class="card-text">{{this.state}} </p>
        <a href="/edit-address/{{this._id}}" class="card-link btn btn-primary ">Edit</a>
        <a href="/delete-address/{{this._id}}" class="card-link btn btn-danger">Delete</a>
      </div>
    </div>
    {{/each}}
  </div>

</div>