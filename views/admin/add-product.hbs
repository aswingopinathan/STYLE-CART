<section>
    <div class="container mt-4">
        <div class="row">
            <div class="col-md-6 ml-5 m-auto">
                <h2 class="text-center">Add Product</h2>
                <form action="/admin/add-product" method="post" enctype="multipart/form-data">
                    <label>Name</label>
                    <input type="text" name="Name" class="form-control" required><br>

                    <div class="d-flex">
                        <div class="form-group col-md-4">
                            <label for="inputState">Category</label>
                            <select id="inputState" name="Category" class="form-control">
                                <option selected>Choose...</option>
                                {{#each getcategory}}
                                <option>{{this.Name}}</option>
                                {{/each}}
                            </select>
                        </div>

                        <div class="form-group col-md-4">
                            <label for="inputState">Sub Category</label>
                            <select id="inputState" name="SubCategory" class="form-control">
                                <option selected>Choose...</option>
                                {{#each getsubcategory}}
                                <option>{{this.Name}}</option>
                                {{/each}}
                            </select>
                        </div>

                        <div class="form-group col-md-4">
                            <label for="inputState">Brands</label>
                            <select id="inputState" name="Brands" class="form-control">
                                <option selected>Choose...</option>
                                {{#each brands}}
                                <option>{{this.Name}}</option>
                                {{/each}}
                            </select>
                        </div>

                    </div>
                    <label>Price</label>
                    <input type="text" name="Price" class="form-control" required><br>
                    <label>Cutprice</label>
                    <input type="text" name="Cutprice" class="form-control" required><br>
                    <label>Stock</label>
                    <input type="text" name="Stock" class="form-control" required><br>
                    <label>Description</label>
                    <input type="text" name="Description" class="form-control" required><br>
                    <label>Image</label>
                    <input type="file" name="Images" class="form-control" multiple>
                    <button type="submit" class="btn btn-success mt-4">Submit</button>
                </form>
            </div>
        </div>
    </div>
</section>


