


<div class="row">
    <div class="col-xl-12">
        <div class="card m-b-30">
            <div class="card-body">
                <h4 class="mt-0 header-title mb-4 text-center">PRODUCTS</h4>
                <div class="table-responsive">
                    <table class="table table-hover" id="productsTable">
                        <thead>
                            <tr>
                                <th scope="col">Index</th>
                                <th scope="col">Name</th>
                                <th scope="col">Category</th>
                                <th scope="col">SubCategory</th>
                                <th scope="col">Brands</th>
                                <th scope="col">Price</th>
                                <th scope="col">Stock</th>
                                <th scope="col">Description</th>
                                <th scope="col">Image</th>
                                <th scope="col">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each products}}
                            <tr>
                                <td>{{inc @index}}</td>
                                <td style="width: 100px">{{this.Name}}</td>
                                <td>{{this.Category}}</td>
                                <td>{{this.SubCategory}}</td>
                                <td>{{this.Brands}}</td>
                                <td>{{this.Price}}</td>
                                <td>{{this.Stock}}</td>
                                <td style="width: 300px">{{this.Description}}</td>
                                <td><img style="width: 50px;height: 50px" src="/product-images/{{this.Images.[0]}}">
                                </td>
                                <td>
                                    <div>
                                        <a href="/admin/edit-product/{{this._id}}" class="btn btn-primary btn-sm"> Edit
                                        </a>
                                        <a href="/admin/delete-product/{{this._id}}" class="btn btn-danger btn-sm"
                                            onclick="return confirm('Do you want to delete {{this.Name}} ?')">Delete</a>
                                    </div>
                                </td>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
