<div class="row">
    <div class="col-xl-12">
        <div class="card m-b-30">
            <div class="card-body">
                <h4 class="mt-0 header-title mb-4 text-center">CATEGORY OFFER</h4>
                <form class="d-flex justify-content-end">
                    <a href="/admin/add-offer-category" class="btn btn-success" style="width: fit-content;">ADD OFFER</a>
                </form><br>
                <div class="table-responsive">
                    <table class="table table-hover" id="productsTable">
                        <thead>
                            <tr>
                                <th scope="col">Index</th>
                                <th scope="col">Category Offer Name</th>
                               <th scope="col">Start Date</th>
                                <th scope="col">End Date</th>
                                <th scope="col">Lowercap</th>
                                <th scope="col">Uppercap</th>
                                <th scope="col">Percentage</th>
                                <th scope="col">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each offerCategory}}
                            <tr>
                                <td>{{inc @index}}</td>
                                <td>{{this.name}}</td>
                                <td>{{this.edate}}</td>
                                <td>{{this.percentage}}</td>
                                <td>
                                    <div>
                                        <a href="/admin/delete-offer-category/{{this._id}}" class="btn btn-danger btn-sm"
                                            onclick="return confirm('Do you want to delete {{this.name}} ?')">Delete</a>
                                    </div>
                                </td>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>