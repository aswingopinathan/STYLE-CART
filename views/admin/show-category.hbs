<div class="row">
    <div class="col-xl-12">
        <div class="card m-b-30">
            <div class="card-body">
                <h4 class="mt-0 header-title mb-4 text-center">CATEGORY</h4>
                <form class="d-flex justify-content-end">
                    <a href="/admin/add-category" class="btn btn-success" style="width: fit-content;">ADD CATEGORY</a>
                </form><br>
                <div class="table-responsive">
                    <table class="table table-hover" id="productsTable">
                        <thead>
                            <tr>
                                <th scope="col">Index</th>
                                <th scope="col">Name</th>
                                <th scope="col">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each category}}
                            <tr>
                                <td>{{inc @index}}</td>
                                <td>{{this.Name}}</td>
                                <td>
                                    <div>
                                        <a href="/admin/delete-category/{{this._id}}" class="btn btn-danger btn-sm"
                                            onclick="return confirm('Do you want to delete {{this.Name}} ?')">Delete</a>
                                    </div>
                                </td>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>