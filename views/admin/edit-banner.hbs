<section>
    <div class="container mt-4">
        <div class="row">
            <div class="col-md-6 ml-5 m-auto">
                <h2 class="text-center">Edit Banner</h2>
                <form action="/admin/edit-banner/{{bannerDetails._id}}" method="post" enctype="multipart/form-data">
                    <label>Name</label>
                    <input type="text" name="Name" class="form-control" value="{{bannerDetails.Name}}"><br>
                    <label>Description</label>
                    <input type="text" name="Description" class="form-control" value="{{bannerDetails.Description}}"><br>
                    <label>Image</label>
                    <img src="/product-images/{{bannerDetails.Images.[0]}}" alt="" style="width: 100px;height: 100px">
                    <input type="file" name="Images" class="form-control" multiple>
                    <button type="submit" class="btn btn-success mt-4">Submit</button>
                </form>
            </div>
        </div>
    </div>
</section>